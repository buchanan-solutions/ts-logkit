{
  "name": "@buchanan-solutions/ts-logkit",
  "version": "0.2.0",
  "private": false,
  "description": "Composable TypeScript logging toolkit with hooks and transports",
  "repository": {
    "type": "git",
    "url": "https://github.com/buchanan-solutions/ts-logkit"
  },
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "import": "./dist/registry/index.js",
      "require": "./dist/registry/index.cjs"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js",
      "require": "./dist/storage/index.cjs"
    },
    "./stores/server": {
      "types": "./dist/storage/server.d.ts",
      "import": "./dist/storage/server.js",
      "require": "./dist/storage/server.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/registry/index.ts src/storage/index.ts src/storage/server.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/registry/index.ts src/storage/index.ts src/storage/server.ts --watch --dts --format cjs,esm",
    "lint": "echo \"todo\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:verbose": "vitest run --reporter verbose --globals",
    "combine": "bash C:/users/alexb/scripts/combine-files.sh -p src"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
