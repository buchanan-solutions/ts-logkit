{
  "name": "@buchanan-solutions/ts-logkit",
  "version": "0.0.1",
  "type": "module",
  "description": "Composable TypeScript logging toolkit with hooks and transports",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --watch --dts --format cjs,esm",
    "lint": "echo \"todo\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:verbose": "vitest run --reporter verbose --globals"
  },
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
