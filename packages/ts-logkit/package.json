{
  "name": "@buchanan-solutions/ts-logkit",
  "version": "0.3.1",
  "private": false,
  "description": "Composable TypeScript logging toolkit with hooks and transports",
  "repository": {
    "type": "git",
    "url": "https://github.com/buchanan-solutions/ts-logkit"
  },
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "import": "./dist/registry/index.js",
      "require": "./dist/registry/index.cjs"
    },
    "./stores": {
      "types": "./dist/stores/index.d.ts",
      "import": "./dist/stores/index.js",
      "require": "./dist/stores/index.cjs"
    },
    "./stores/server": {
      "types": "./dist/stores/server.d.ts",
      "import": "./dist/stores/server.js",
      "require": "./dist/stores/server.cjs"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js",
      "require": "./dist/testing/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "echo \"todo\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:verbose": "vitest run --reporter verbose --globals",
    "combine": "bash C:/users/alexb/scripts/combine-files.sh -p src"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "vitest": "^1 || ^2 || ^3"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    }
  }
}
